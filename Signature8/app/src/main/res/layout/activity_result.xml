<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harshit.signature8.ResultActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textres"
        android:textSize="40sp"
        android:text="Your Prediction is "
        android:textAlignment="center"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textres"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="120sp"
        android:id="@+id/resultdata"
        />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/resultdata"
    android:layout_centerHorizontal="true"
    android:text="BACK"
    android:textSize="20sp"
    android:id="@+id/backbutton"

    />

</RelativeLayout>
